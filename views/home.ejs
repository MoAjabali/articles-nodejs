<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles Nodejs</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Articles <strong><span class="text-success">Nodejs</span></strong></a>
            <div class="navbar-nav d-flex flex-row">
                <a class="nav-link me-3" href="/">Home</a>
                <a class="nav-link" href="/articles/new">New Article</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Articles</h1>
        <div class="row mt-4">
            <% articles.forEach(article => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= article.title %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">By <%= article.author %></h6>
                            <p class="card-text"><%= article.body.substring(0, 100) %>...</p>
                            <a href="/articles/<%= article._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>